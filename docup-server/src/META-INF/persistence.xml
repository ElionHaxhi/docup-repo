<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="docup-serverPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.docup.model.Patient</class>
        <class>com.docup.model.PersonalInfo</class>
        <class>com.docup.model.Doctor</class>
        <class>com.docup.model.Picture</class>
        <class>com.docup.model.Description</class>
        <class>com.docup.model.DescriptionType</class>
        <class>com.docup.model.Visit</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/prv?zeroDateTimeBehavior=convertToNull"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="forzamilan"/>
        </properties>
    </persistence-unit>
</persistence>
